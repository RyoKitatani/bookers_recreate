<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "詳細", book_path(book) %></th>
      <th><%= link_to "編集", "#" %></th>
      <th><%= link_to "削除", "#" %></th>
    </tr>
  <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :body %><br>
<%= f.text_area :body %><br>
<%= f.submit '投稿' %>
<% end %>