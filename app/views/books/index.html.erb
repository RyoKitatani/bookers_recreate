<h2>Books</h2>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book|%>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th><%= link_to "詳細", "#" %></th>
      <th><%= link_to "編集", "#" %></th>
      <th><%= link_to "削除", "#" %></th>
    </tr>
  <% end %>
  </tbody>
</table>