<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
<%= f.label :title %><br>
<%= f.text_field :title %><br>
<%= f.label :body %><br>
<%= f.text_area :body %><br>
<%= f.label :image %><br>
<%= attachment_image_tag @book, :image, :fill, 100, 100, format:'jpeg' %><br>
<%= f.attachment_field :image %><br>
<%= f.submit '修正' %>
<% end %>

<%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>